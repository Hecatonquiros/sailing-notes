---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, METADATA, SOCIALS } from "@consts";
import { translations } from "@lib/i18n";

const blog = (await getCollection("blog"))
  .filter(post => !post.data.draft && post.data.lang === 'en')
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft && project.data.lang === 'en')
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_PROJECTS_ON_HOMEPAGE);

const findings = (await getCollection("findings"))
  .filter(finding => !finding.data.draft && finding.data.lang === 'en')
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_FINDINGS_ON_HOMEPAGE);

const t = translations.en;

---

<PageLayout title={METADATA.home.en.TITLE} description={METADATA.home.en.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white">
      {t.home.greeting} <span class="text-xl">üëãüèª</span> 
    </h4>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p class="animate">
            {t.home.intro1}
          </p>
          <p class="animate">
            {t.home.intro2}
          </p>
          <p class="animate">
            {t.home.intro3}
          </p>
        </article>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            {t.home.latestPosts}
          </h5>
          <Link href="/blog">
            {t.home.seeAllPosts}
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {blog.map(post => (
            <li>
              <ArrowCard entry={post} />
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            {t.home.recentProjects}
          </h5>
          <Link href="/projects">
            {t.home.seeAllProjects}
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {projects.map(project => (
            <li>
              <ArrowCard entry={project} />
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            {t.home.recentFindings}
          </h5>
          <Link href="/findings">
            {t.home.seeAllFindings}
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {findings.map(finding => (
            <li>
              <ArrowCard entry={finding} />
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-4">
        <h5 class="font-semibold text-black dark:text-white">
          {t.home.letsConnect}
        </h5>
        <article>
          <p>
            {t.home.connectText}
          </p>
        </article>
        <ul class="flex flex-wrap gap-2">
          {SOCIALS.map(SOCIAL => (
            <li class="flex gap-x-2 text-nowrap">
              <Link href={SOCIAL.HREF} external aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}>
                {SOCIAL.NAME}
              </Link>
              {"/"}
            </li>
          ))}
          <li class="line-clamp-1">
            <Link href={`mailto:${SITE.EMAIL}`} aria-label={`Email ${SITE.NAME}`}>
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container>
</PageLayout>