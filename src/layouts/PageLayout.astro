---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
  relatedSlug?: string;
};

const { title, description, relatedSlug } = Astro.props;
const currentLang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body>
    <Header relatedSlug={relatedSlug} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
