---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
import { translations } from "@lib/i18n";
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between">
      <Link href="/" underline={false}>
        <div class="font-semibold">
          {SITE.NAME}
        </div>
      </Link>
      <nav class="flex gap-1">
        {(() => {
          const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';
          const t = translations[lang];
          return <>
            <Link href="/blog">
              {t.nav.blog}
            </Link>
            <span>/</span>
            <Link href="/projects">
              {t.nav.projects}
            </Link>
            <span class="mx-2">|</span>
            <Link href={Astro.url.pathname.startsWith('/en') ? Astro.url.pathname.replace('/en', '/es') : Astro.url.pathname.replace('/es', '/en')}>
              {t.switchLang}
            </Link>
          </>;
        })()}
      </nav>
    </div>
  </Container>
</header>
