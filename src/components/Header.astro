---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
import { translations } from "@lib/i18n";
import { getLanguageSwitchURL } from "@lib/utils";

// Props para pasar informaci√≥n del contenido actual
interface Props {
  relatedSlug?: string;
}

const { relatedSlug } = Astro.props;
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between">
      <Link href="/" underline={false}>
        <div class="font-semibold">
          {SITE.NAME}
        </div>
      </Link>
      <nav class="flex gap-1">
        {(() => {
          const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';
          const t = translations[lang];
          const switchURL = getLanguageSwitchURL(Astro.url.pathname, lang, relatedSlug);
          
          return <>
            <Link href={`/${lang}/blog`}>
              {t.nav.blog}
            </Link>
            <span>/</span>
            <Link href={`/${lang}/projects`}>
              {t.nav.projects}
            </Link>
            <span class="mx-2">|</span>
            <Link href={switchURL}>
              {t.switchLang}
            </Link>
          </>;
        })()}
      </nav>
    </div>
  </Container>
</header>
